
  <%- messages() %>
  <% if (errors) { %>
    <ul class="notice">
   <% errors.array().forEach(error => { %>
     <li><%= error.msg %></li>
  <%  }) %>
   </ul>
  <% } %>

  <div id="add-classification">
      <form id="classForm" action="/inv/addClassification" method="post">
      <div class="form-wrapper">
        <div class="form-header">
          <% if (title) { %>
            <h1><%= title %></h1>
            <% } else {
              res.redirect('/')
            } %>
          
        </div>
        <div class="form-content">
          <span class="tip">* Required</span>
          <div class="form-element">
            <label>
                <input aria-label="Classification Name" placeholder="Classification Name *" type="text" name="classification_name" aria-required="true" required>
            </label>
          </div>
          <div class="form-submit">
              <input id="submitButton" type="submit" name="submit" value="Submit" class="SubmitButton">
          </div>
        </div>
        <div class="form-footer">
          
        </div>
      </div>
      </form>
    </div>