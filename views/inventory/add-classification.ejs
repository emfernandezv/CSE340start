<link rel="stylesheet" href="/css/add-styles.css" >
<% if (title) { %>
  <h1><%= title %></h1>
  <% } else {
    res.redirect('/')
  } %>

  <%- messages() %>
  <% if (errors) { %>
    <ul class="notice">
   <% errors.array().forEach(error => { %>
     <li><%= error.msg %></li>
  <%  }) %>
   </ul>
  <% } %>


<div id="add-classification" class="add-container">
    <form method="post" action="/inv/add-classification" class="AddForm">
        <label for="classification" class="AddLabel">Classification:</label>
        <input type="text" id="classification" name="classification_name" required class="AddInput">
    
        <input id="submitButton" type="submit" name="submit" value="Submit" class="AddButton">
      </form>
</div>