<%- messages() %>

<% if (errors) { %>
  <ul class="notice">
  <% errors.array().forEach(error => { %>
    <li><%= error.msg %></li>
<%  }) %>
  </ul>
<% } %>


<div class="container">
  <div class="form-container">
    <form id="login">
      <h1><%= title %></h1>
      <input type="email" name="account_email" placeholder="Email">
      <input type="password" name="account_password" placeholder="Password" id="pword">
      <button type="submit">Sign In</button>
      <p>No account? <a href="/account/register" >Register</a></p>
    </form>
  </div>
</div>